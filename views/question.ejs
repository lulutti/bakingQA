<%- include('./parts/head'); -%>
<div class=boxQuestion>
        <p id="answersCount">6 answers</p>
        <div class="contentQuestion">
          <p id="titleAsk"><%= question.title %></p>
        <p id="descriptionAsk"><%= question.description %></p>
        </div>
        <div class="questionButtons">
          <a href="#" class="button" id="yellowButton">Answer</a>
        </div>
</div>
<div class=boxAnswer>
        <form action="/question/<%=question.id%>/saveAnswer" method="POST">
                <p>Your answer</p>
                <textarea name="body" cols="30" rows="10" placeholder="Be kind and sweet"></textarea>
                <button type="submit">send</button>
                <a href="#" type="submit" class="button" id="yellowButton">Send</a>
        </form>
</div>

<div class="answers">
        <%answer.forEach(answer => {%>
                <%=answer.body%>
        <%})%>
</div>